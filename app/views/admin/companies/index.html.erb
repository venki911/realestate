<%= page_title("Company") %>
<%= breadcrumb_admin([ {Company: nil }]) %>
<%= page_header "Company" do %>
  <%= link_to "New", new_admin_company_path, class: 'btn btn-info' %>
<% end %>

<%= paginate @companies %>

<table class='table'>
  <thead>
    <tr>
      <td>No</td>
      <td>Logo</td>
      <td>Name</td>
      <td>License</td>
      <td>Founded</td>
      <td>Phone</td>
      <td>Email</td>
      <td>Action</td>
    </tr>
  </thead>

  <tbody>
    <% @companies.each_with_index do |company, index| %>
      <tr>
        <td><%= index_in_paginate(index+1) %></td>
        <td><%= image_tag company.logo.thumb.url, alt: company.name %></td>
        <td><%= company.name%></td>
        <td><%= company.license %>
        <td><%= company.year_founded %>
        <td><%= company.phone %>
        <td><%= company.email %>
        <td>
          <%=link_to 'Edit', edit_admin_company_path(company) %> | 
          <%=link_to 'Destroy', admin_company_path(company), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @companies %>