<%= simple_form_for [:admin, @category], html: {class: 'form form-inline'} do |f| %>
  <%= input_row do %>
    <%= f.input :name, input_html: { class: 'form-control' } %>
  <%end %>

  <%= input_row do %>
    <label> </label>
    <%= f.input :is_land, label: 'Is Land',
                                  label_html: {class: 'label-checkbox'}, input_html: {class: 'input-inline'} %>
  <% end %>

  <%= input_row do %>
   <label></label>
    <%= f.submit "Save", class: 'btn btn-primary' %>
  <% end %>
<% end %>