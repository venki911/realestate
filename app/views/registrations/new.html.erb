<% content_for(:title) { "Sign up" } %>

<div class='form-box'>
  
  <%= simple_form_for @user, url: registrations_path, role: 'form', html: {class: 'form-sign-up form-center form-inline'} do |f| %>
    <%= errors_for(@user) %>

    <%= input_row do %>
      <%= f.input :first_name, input_html: { class: 'form-control', placeholder: 'First name' } %>
    <%end%>

    <%= input_row do %>
      <%= f.input :last_name, input_html: {class: 'form-control', placeholder: 'Last name' } %>
    <%end%>

    <%= input_row do %>
      <%= f.input :phone, input_html: { class: 'form-control', placeholder: 'Phone' } %>
    <%end%>

    <%= input_row do %>
      <%= f.input :user_name, required: true, input_html: { class: 'form-control', placeholder: 'User name' } %>
    <%end%>

    <%= input_row do %>
      <%= f.input :email, input_html: { class: 'form-control', placeholder: 'Email' } %>
    <%end%>

    <%= input_row do %>
      <%= f.input :gender, collection: User.available_genders,
                  include_blank: false,
                  input_html: { class: 'selectpicker select form-control', placeholder: 'Gender'} %>
    <%end%>

    <%= input_row do %>
      <%= f.input :role, collection: User.available_roles, label: 'You are ?',
                  include_blank: false,
                  input_html: { class: 'selectpicker select form-control', placeholder: 'Gender'} %>
    <%end%>

    <%= input_row do %>
      <%= f.input :password, required: true, input_html: { class: 'form-control', placeholder: 'Password'} %>
    <%end%>

    <%= input_row do %>
      <%= f.input :password_confirmation, required: true, label: 'Password confirm', input_html: { class: 'form-control', placeholder: 'Confirm' } %>
    <%end%>

    <%= input_row do %>
      <label> </label>
      <%= f.check_box :agree, id: 'agree-term' %>
      <label for='agree-term' class='inline' > Agree with our <%= link_to 'Terms and Policy', '' %> </label>
    <%end%>

    <%= input_row do %>
      <%= f.button :submit, "Create", class: 'btn btn-primary btn-block' %>
    <%end%>
    <hr/>

    <%=link_to 'Create With Facebook', 'javascript:void(0)', class: 'fb-login btn btn-primary btn-block', 
               data: { url: sign_up_fb_path } %>
    <%=link_to 'Create With Facebook Mobile', @koala_auth.url_for_oauth_code(:callback => sign_up_fb_m_url),
               class: 'btn btn-primary btn-block'%>
  <% end %>

</div>