<div style='margin-top: 10px;'>
  <div class="btn-group " role="group">
    <%= link_to edit_member_property_path(property, params.slice(:next)),
                class: "btn btn-default #{active_index(current_index == 0)}" do %>

      <!-- <i class='glyphicon glyphicon-shopping-cart'> </i> -->
      <span class='badge badge-primary'>1</span> General
    <% end %>

    <%= link_to show_config_member_property_path(property, params.slice(:next)),
                  class: "btn btn-default #{active_index(current_index == 1)}" do %>
      <!-- <i class='glyphicon glyphicon-road'> </i> -->
      <span class='badge badge-primary'>2</span> 
      Facilities
    <% end %>

    <%= link_to show_map_member_property_path(property, params.slice(:next)),
                class: "btn btn-default #{active_index(current_index == 2)}" do %>
      <!-- <i class='glyphicon glyphicon-map-marker'> </i> -->
      <span class='badge badge-primary'>3</span> 
      Location
    <% end %>

    <%= link_to show_photos_member_property_path(property, params.slice(:next)),
                class: "btn btn-default #{active_index(current_index == 3)}" do %>
      <!-- <i class='glyphicon glyphicon-camera'> </i> -->
      <span class='badge badge-primary'>4</span> 
      Photos
    <% end %>

    <%= link_to show_note_member_property_path(property, params.slice(:next)),
                class: "btn btn-default #{active_index(current_index == 4)}" do %>
      <!-- <i class='glyphicon glyphicon-book'> </i>  -->
      <span class='badge badge-primary'>5</span>
      Note/History
    <% end %>
  </div>

</div>