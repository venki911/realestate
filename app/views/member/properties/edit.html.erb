<%= page_title("General") %>
<%= page_header "General" do %>
  <%= render "property_tab", property: @property, current_index: 0 %>
<% end %>

<% if @property.verification_status == Property::VERIFICATION_STATUS_REJECT %>
  <div class='alert alert-info' >
     <strong> This was rejected </strong> : <i> <%= @property.reject_reason %>.</i>
     We are happy to review it again once you edit it.
  </div>
<% end %>

<blockquote>
  <strong> <%= @property.display_id %> </strong> is your property ID.
  This ID is used by our company to identify the property. You might exchange this with buyer/saler.
</blockquote>

<%= render 'form' %>