<!-- Map -->
<div class="col-lg-6">
  <%= input_row do %>
    <%= f.input :lat, as: :string, label: 'Latitude', input_html: {class: 'form-control'} %>
  <% end %>

  <%= input_row do %>
    <%= f.input :lon, as: :string, label: 'Longitud', input_html: {class: 'form-control'} %>
  <% end %>

  <%= input_row do %>
    <label> </label>
    <%= f.input :show_on_map, label_html: {class: 'label-checkbox'}, input_html: {class: 'form-control input-inline'} %>
  <% end %>
</div>