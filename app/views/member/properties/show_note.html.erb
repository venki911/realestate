<%= page_title "Summary" %>

<%= page_header "Summary" do %>
  <%= render "property_tab", property: @property, current_index: 4 %>
<% end %>

<blockquote>
  Do you have anything special to descripe your property ?
</blockquote>

<%= simple_form_for [:member, @property], url: update_note_member_property_path(@property, params.slice(:next) ),
                                          method: 'PUT',
                                          html: {class: 'form form-lg form-inline'} do |f| %>
  <!-- Property Note -->
<div class='row'>
  <div class='col-lg-6 col-md-6'>
    <%= input_row do %>
      <%= f.input :note, as: :text, label: false, input_html: { class: 'form-control', rows: 15, cols: 80, style: 'width: auto !important;'} %>
    <% end %>

    <%= input_row class: 'clearfix' do %>
      <% if params[:next].present? %>
        <button class='btn btn-primary btn-lg btn-form-action' > Create Note</button>
        <span> </span>
      <% else %>
        <button class='btn btn-primary btn-lg btn-form-action' > Update Note </button>
      <% end %>
    <% end %>
  </div>

  <div class='col-lg-6 col-md-6'>
    <strong style='font-size: 120%;'> What content goes best here ? </strong>
    <ul class='exp-step'>
      <li>Property History</li>
      <li>Property Architect</li>
      <li>Property Note</li>
      <li>Property Summary</li>
    </ul>
  </div>
</div>
<% end %>