<%= page_title("Edit Photo") %>
<%= page_header "Edit Photo" %>

<%= render 'shared/users/profile_tab', current_index: 2 %>

<%= simple_form_for([:member, current_user], url: member_update_photo_path, html: {class: 'form form-inline', multipart: true}) do |f| %>

  <%= input_row do %>
    <%= image_tag current_user.avatar.thumb.url, width: 50, height: 50 %>
  <% end %>

  <%= input_row do %>
    <%= f.input :avatar, as: :file, label: false %>
  <% end %>

  <%= input_row do %>
    <%= f.button :submit, "Update", class: 'btn btn-primary' %>
  <%end%>

<% end %>
