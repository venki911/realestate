<div class="media">
  <div class="media-left">
    <a href="#"> <%= image_tag user.avatar.thumb.url, class: 'img-circle medium-thumb' %> </a>
  </div>

  <div class="media-body">
    <h4 class="media-heading"> <%= user.full_name %></h4>
    <% if user.company_id.present? %>
      <div class=''> <%=user.company.name %> </div>
    <% end %>
    <p class='line'>
      <div>
        <label> Tel : </label> 
        <%= user.phone %>
       </div>
    </p>
  </div>
</div>